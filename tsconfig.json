{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "noStrictGenericChecks": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "lib": ["dom", "esnext"]
    },
    "exclude": [
        "node_modules",
        "**/*.test.tsx",
        "**/*.stories.tsx",
    ],
    "include": [
        "./src/**/*"
    ]
}
