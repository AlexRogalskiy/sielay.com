{% extends 'card.njk' %}

{% block content %}
<p class="text-sm text-gray-600 flex items-center"></p>
<div class="text-gray-900 font-bold text-xl mb-2">
    <a href="{{ post.url }}">{{ post.data.title }}</a>
</div>
<p class="text-gray-700 text-base">{% excerpt post %}… <a href="{{ post.url }}">read more…</a>
</p>
{% endblock %}

{% block rest %}
<div class="mb-8">
{%- for tag in post.data.tags -%}
<a class="inline-block bg-gray-200 rounded-full px-2 py-1 text-gray-600 mr-2 mb-1 text-xs" title="second" href="/blog/tag/{{ tag | blog_slug }}">#{{ tag }}</a>
{%- endfor -%}
</div>
<div class="flex items-center">
<div class="text-sm">
<p class="text-gray-900 leading-none"></p>
<p class="text-gray-600">{{ post | readingTime }} min read - {{ post.date | blog_dateformat('LL') }}</p>
</div>
</div>
{% endblock %}